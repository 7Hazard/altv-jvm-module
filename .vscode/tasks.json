{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Gradle)",
            "type": "shell",
            "command": "./gradlew build buildModule",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ]
        },
        {
            "label": "Build Debug (Gradle)",
            "type": "shell",
            "command": "./gradlew build buildModuleDebug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ]
        },
        {
            "label": "Clean (Gradle)",
            "type": "shell",
            "command": "./gradlew clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ]
        }
    ]
}